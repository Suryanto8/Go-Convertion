            <ComboBoxItem Content="Kelvin"/>
            <ComboBoxItem Content="Celcius"/>
            <ComboBoxItem Content="Fahrenheit"/>
            <ComboBoxItem Content="Reamur"/>
        </ComboBox>
        <TextBlock x:ConnectionId='3' x:Name="con1" HorizontalAlignment="Left" Margin="11,125,0,497" TextWrapping="Wrap" Text="-          :" TextAlignment="Center" VerticalAlignment="Center" Height="20" Width="120"/>
        <TextBlock x:ConnectionId='4' x:Name="con2" HorizontalAlignment="Left" Margin="11,175,0,442" TextWrapping="Wrap" Text="-          :" TextAlignment="Center" VerticalAlignment="Center" Height="20" Width="120"/>
        <TextBlock x:ConnectionId='5' x:Name="con3" HorizontalAlignment="Left" Margin="11,205,0,380" TextWrapping="Wrap" Text="-          :" TextAlignment="Center" VerticalAlignment="Center" Width="120" Height="20"/>
