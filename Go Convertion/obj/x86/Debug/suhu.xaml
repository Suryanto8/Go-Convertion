        <TextBlock x:ConnectionId='8' x:Name="conbox3" HorizontalAlignment="Left" Margin="176,0,0,398" TextWrapping="Wrap" Text="-" TextAlignment="Center" VerticalAlignment="Bottom" Height="20" Width="115"/>
        <Button x:ConnectionId='9' x:Name="tanda" Content="+/-" HorizontalAlignment="Left" Margin="67,47,0,0" VerticalAlignment="Top" Width="44" Height="32"                     />
        <TextBlock x:ConnectionId='10' x:Name="Result" HorizontalAlignment="Left" Margin="95,98,0,522" TextWrapping="Wrap" Text="Result" TextAlignment="Center" VerticalAlignment="Center" Height="20" Width="120"/>
    </Grid>
